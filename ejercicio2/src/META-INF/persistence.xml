<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd"
        version="1.0">
    <persistence-unit name="BD" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="javax.persistence.jdbc.driver" value="org.firebirdsql.jdbc.FBDriver"/>

            <!-- Linux -->
            <!-- <property name="javax.persistence.jdbc.url" value="jdbc:firebirdsql:localhost/3050:/var/firebird/tapasv.gdb"/> -->

            <!-- Windows -->
            <property name="javax.persistence.jdbc.url" value="jdbc:firebirdsql:localhost/3050:C:\BD_TP2_EJ3.FDB"/>

            <property name="javax.persistence.jdbc.user" value="sysdba"/>
            <property name="javax.persistence.jdbc.password" value="masterkey"/>
        </properties>
    </persistence-unit>
</persistence>        
